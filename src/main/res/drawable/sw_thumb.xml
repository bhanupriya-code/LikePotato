<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

<item android:state_checked="true">
    <shape android:shape="rectangle">

        <solid android:color="@color/statusbar"/>
        <solid android:color="@color/white"/>
        <size android:width="25dp" android:height="20dp"/>
        <corners android:radius="20dp"/>
        <stroke android:width="2dp" android:color="@color/sec_main_color"/>

    </shape>
</item>
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/sec_main_color"/>
            <solid android:color="@color/white"/>
            <size android:width="25dp" android:height="20dp"/>
            <corners android:radius="20dp"/>
            <stroke android:width="2dp" android:color="@color/statusbar"/>

        </shape>
    </item>
</selector>